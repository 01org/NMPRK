<Window x:Class="NMPRK_GUI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="250" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF0071C5" Grid.ColumnSpan="2" />
        <Image Name="image1" Source="/NMPRK_GUI;component/Resources/logo-white-logo-look-inside.png" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" />
        <Label Grid.Row="1" Name="lblInfo" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.RowSpan="2" Margin="10" />
    </Grid>
</Window>
